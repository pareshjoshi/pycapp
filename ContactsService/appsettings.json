{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "Kestrel": {
    "EndPoints": {
      "Http": {
        "Url": "http://*:5555" // Use different port if this port is busy on your machine
      },
      "Https": {
        "Url": "https://*:5556", // Use different port if this port is busy on your machine
        "Certificate": {
          // to make this work you need to generate self-signed certificate.
          // You can generate it using powershell cmdlet: New-SelfSignedCertificate -DnsName "localhost" -CertStoreLocation "cert:\LocalMachine\My"
          "Subject": "localhost",
          "Store": "My",
          "Location": "LocalMachine",
          "AllowInvalid": "true"
        }
      }
    }
  },
  "AllowedHosts": "*"
}
